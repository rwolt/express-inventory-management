<div class="form-container">
  <h1>Add new Item</h1>
  <form method="POST">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />
    </div>
    <div>
      <label for="description">Description:</label>
      <input type="text" id="description" name="description" />
    </div>
    <div>
      <label for="category">Category:</label>
      <select id="category" name="category">
        <% for (let category of categories) { %>
        <option value="<%= category._id %>"><%= category.name %></option>
        <% } %>
      </select>
    </div>
    <div>
      <label for="unit-of-measure">Unit of Measure:</label>
      <select id="unit-of-measure" name="unitOfMeasure">
        <option value="ea">ea</option>
        <option value="lb">lb</option>
      </select>
    </div>
    <div>
      <input
        type="text"
        id="price"
        name="price"
        pattern="^[0-9]+(\.[0-9]+)?$"
        title="Enter a price in decimal format"
      />
    </div>
    <div>
      <label for="lead-time">Lead Time (days): </label>
      <input type="number" id="lead-time" name="leadTime" min="0" required />
    </div>
    <div>
      <label for="safety-stock">Safety Stock: </label>
      <input
        type="number"
        id="safety-stock"
        name="safetyStock"
        min="0"
        required
      />
    </div>
    <div>
      <label for="daily-average-usage">Daily Average Usage: </label>
      <input
        type="number"
        id="daily-average-usage"
        name="dailyAverageUsage"
        min="0"
        required
      />
    </div>
    <div>
      <label for="quantity-available">Quantity Available: </label>
      <input
        type="number"
        id="quantity-available"
        name="quantityAvailable"
        min="0"
        required
      />
    </div>
    <input type="submit" value="Add Item" />
  </form>
</div>
