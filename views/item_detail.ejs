<div class="wrapper">
  <div class="form-container">
    <h1><%= item.name %></h1>
    <div class="description-container">
      <div>
        <a href="/shop/item/<%= item._id %>/update">Update Item</a>
        <a href="/shop/item/<%= item._id %>/delete">Delete Item</a>
      </div>
      <p>
        <span class="description-label">Category:</span> <%= item.category.name
        %>
      </p>
      <p>
        <span class="description-label">Price:</span> <%= item.price %> per <%=
        item.unitOfMeasure %>
      </p>
      <p>
        <span class="description-label">Lead Time:</span> <%= item.leadTime %>
        days
      </p>
      <p>
        <span class="description-label">Safety Stock: </span><%=
        item.safetyStock %>
      </p>
      <p>
        <span class="description-label">Daily Average Usage: </span><%=
        item.dailyAverageUsage %>
      </p>
      <p>
        <span class="description-label">Reorder Point: </span><%=
        item.reorderPoint %>
      </p>
      <p>
        <span class="description-label">Quantity Available: </span><%=
        item.quantityAvailable %>
      </p>
      <p id="item-description"><%= item.description %></p>
    </div>
  </div>
  <img
    class="item-detail-image"
    src="<%=item.image ? item.imageURL : '/images/supplies.png'%>"
    alt="<%=item.image ? item.name : 'simple illustration of a shopping basket with supplies' %>"
  />
</div>
